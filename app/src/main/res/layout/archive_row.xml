<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin8"
            android:layout_toLeftOf="@+id/tvTime"
            android:padding="@dimen/margin2"
            android:text="Long established facts"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="64dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/roundblue"
            android:gravity="start"
            android:text="2 hrs ago"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginTop="@dimen/margin2"
            android:layout_toLeftOf="@+id/tvTime"
            android:padding="@dimen/margin2"
            android:text="Simply Dummy Text of the printing and typesetting industry viewed your peofile"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize12" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/grey"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
